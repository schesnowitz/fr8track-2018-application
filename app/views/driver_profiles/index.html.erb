<p id="notice"><%= notice %></p>

<h1>Driver Profiles</h1>

<table class='table-striped'>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Driver ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @driver_profiles.each do |driver_profile| %>
      <tr>
        <td><%= driver_profile.first_name %></td>
        <td><%= driver_profile.last_name %></td>

        <td><%= driver_profile.driver_string_id %></td>
        <td><%= link_to 'Show', driver_profile_path(driver_profile) %></td>
        <td><%= link_to 'Edit', edit_driver_profile_path(driver_profile) %></td>
        <td><%= link_to 'Destroy', driver_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Driver Profile', new_driver_profile_path %>


