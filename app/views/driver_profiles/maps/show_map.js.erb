<script>
function initMap() {
  var uluru = {lat: '<%= @current_location.lat if !@current_location.nil? %>', lng: '<%= @current_location.lon if !@current_location.nil? %>' };
  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 4,
    center: uluru
  });
  var marker = new google.maps.Marker({
    position: uluru,
    map: map
  });
}
</script>