<%= simple_form_for(@driver_profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :dob %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zip %>
    <%= f.input :telephone %>
    <%= f.input :image %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
