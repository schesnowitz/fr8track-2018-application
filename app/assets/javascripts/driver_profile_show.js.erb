function initMap() {
  var uluru = {lat: <%= "#{@current_location.lat}" %>, lng: <%= "#{@current_location.lon}" %>};
  var map = new google.maps.Map(document.getElementById('map'), {
    zoom: 4,
    center: uluru
  });
  var marker = new google.maps.Marker({
    position: uluru,
    map: map
  });
}